{
  "format_on_save": "on",
  "languages": {
    "PHP": {
      "formatter": {
        "external": {
          "command": ".zed/format.sh",
          "arguments": ["pint", "{buffer_path}"],
        },
      },
    },
    "JavaScript": {
      "formatter": {
        "external": {
          "command": ".zed/format.sh",
          "arguments": ["prettier", "{buffer_path}"],
        },
      },
    },
    "CSS": {
      "formatter": {
        "external": {
          "command": ".zed/format.sh",
          "arguments": ["prettier", "{buffer_path}"],
        },
      },
    },
    "Twig": {
      "formatter": {
        "external": {
          "command": ".zed/format.sh",
          "arguments": ["prettier", "{buffer_path}"],
        },
      },
    },
  },
}
