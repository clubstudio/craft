{% header "Content-Type: application/manifest+json" %}
{
  "name": "{{ seomatic.site.identity.genericName ?? siteName }}",
  "short_name": "{{ seomatic.site.identity.genericAlternateName ?? siteName }}",
  "description": "{{ seomatic.site.identity.genericDescription ?? '' }}",
  "start_url": "/",
  "scope": "/",
  "id": "/",
  "lang": "{{ currentSite.language|split('-')|first }}",
  "dir": "ltr",
  "display": "standalone",
  "theme_color": "#ffffff",
  "background_color": "#ffffff",
  "icons": [
    {
      "src": "/web-app-manifest-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/web-app-manifest-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ]
}
