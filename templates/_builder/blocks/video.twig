{% set aspectRatios = {
    'video': 'aspect-video',
    'photo': 'aspect-[4/3]',
    'square': 'aspect-square',
} %}

{% set aspectClass = aspectRatios[block.aspectRatio.value] %}

{% if block.videoUrl %}
    <figure class="{{ aspectClass }} bg-black overflow-hidden">
        <video muted controls class="w-full h-full object-cover" aria-label="{{ block.title ?? 'Video'|t }}">
            <source src="{{ block.videoUrl }}" type="video/mp4">
            {{ 'Your browser does not support the video tag.'|t }}
        </video>
    </figure>
{% endif %}
