{% macro paddingTop(preference = 'none') %}
    {{- attribute({
        none: 'pt-0',
        sm: 'pt-2 md:pt-3',
        md: 'pt-6 md:pt-10 lg:pt-16',
        lg: 'pt-8 md:pt-12 lg:pt-20'
    }, preference) -}}
{% endmacro %}

{% macro paddingBottom(preference = 'none') %}
    {{- attribute({
        none: 'pb-0',
        sm: 'pb-2 md:pb-3',
        md: 'pb-8 md:pb-10 lg:pb-16',
        lg: 'pb-6 md:pb-12 lg:pb-20'
    }, preference) -}}
{% endmacro %}

{% macro maxWidth(preference = 'none') %}
    {{- attribute({
        none: 'max-w-none',
        contain: 'container',
        xs: 'md:max-w-xs',
        sm: 'max-w-sm',
        md: 'max-w-md',
        lg: 'max-w-lg',
        xl: 'max-w-xl',
        '2xl': 'max-w-2xl',
        '3xl': 'max-w-3xl',
        '4xl': 'max-w-4xl',
        '5xl': 'max-w-5xl',
        '6xl': 'max-w-6xl',
        '7xl': 'max-w-7xl',
    }, preference) -}}
{% endmacro %}

{% macro horizontalAlignment(preference = 'none') %}
    {{- attribute({
        none: '',
        left: 'ml-0 mr-auto',
        center: 'mx-auto',
        right: 'ml-auto mr-0',
    }, preference) -}}
{% endmacro %}

{% macro backgroundColor(preference = 'none') %}
    {{- attribute({
        'none': 'bg-none',
        'black': 'bg-black',
        'white': 'bg-white',
    }, preference) -}}
{% endmacro %}

{% macro spacer(preference = 'xs') %}
    {{- attribute({
        xs: 'h-3',
        sm: 'h-4',
        md: 'h-5',
        lg: 'h-6',
        xl: 'h-12',
    }, preference) -}}
{% endmacro %}

{% macro fontSize(preference = 'none') %}
    {{- attribute({
        'xs': 'text-xs lg:text-sm',
        'sm': 'text-sm lg:text-base',
        'base': 'text-base',
        'lg': 'text-lg',
        'xl': 'text-xl',
        '2xl': 'text-2xl',
        '3xl': 'text-3xl',
    }, preference) -}}
{% endmacro %}

{% macro textAlignment(preference = 'center') %}
    {{- attribute({
        left: 'text-left',
        center: 'text-center',
        right: 'text-right',
        justify: 'text-justify',
    }, preference) -}}
{% endmacro %}

{% macro verticalAlignment(preference = 'middle') %}
    {{- attribute({
        top: 'items-start',
        middle: 'items-center',
        bottom: 'items-end',
    }, preference) -}}
{% endmacro %}
