{% import '_includes/builder/classes' as classes %}

<div {{ attr({
    class: [
        classes.maxWidth(block.maxWidth.value),
        classes.horizontalAlignment(block.horizontalAlignment.value),
        block.textAlignment is defined ? classes.textAlignment(block.textAlignment.value),
    ]|join(' ')
}) }}>
    {% block content %}
        <p>Default Container Content</p>
    {% endblock %}
</div>
