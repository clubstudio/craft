{% set testimonial = block.testimonialEntry.eagerly().one() %}
{% set image = testimonial.image.eagerly().one() %}

<figure>
    <figcaption class="flex items-center gap-3">
        {% if image %}
            <img src="{{ image.getUrl({ width: 128, height: 128 }) }}" alt="{{ image.alt }}" width="64" height="64">
        {% endif %}
        <div class="flex flex-col">
            <strong>{{ testimonial.person }}</strong>
            <span>{{ testimonial.company }}</span>
        </div>
    </figcaption>
    <blockquote class="mt-3 blockquote">
        {{ testimonial.testimonial }}
    </blockquote>
</figure>
