{% set image = block.image.eagerly().one() %}

{% if image %}
    <figure class="inline-block max-w-24 -ml-2 mb-1">
        {{ tag('img', {
            src: image.url,
            width: image.width,
            height: image.height,
            alt: image.alt,
            loading: 'lazy',
        }) }}
    </figure>
    {# <code class="text-xs text-blue-500">{{ key }}</code> #}
{% endif %}
