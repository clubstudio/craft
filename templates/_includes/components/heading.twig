{% set data = {
    level: 2,
    heading: '',
    attributes: {},
    classMap: {
        h1: 'text-6xl font-bold',
        h2: 'text-4xl font-bold',
        h3: 'text-2xl font-bold',
        h4: 'text-2xl',
        h5: 'text-xl',
        h6: 'text-lg',
    },
}|merge(_context) %}

{% set element = data.level %}

{% tag element with {
    class: data.classMap[data.level] ~ ' text-balance',
}|merge(data.attributes) %}
    {{ data.heading }}
{% endtag %}
