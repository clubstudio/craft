{% set data = {
    level: 2,
    heading: '',
    attributes: {},
}|merge(_context) %}

{% set element = data.level %}

{% set classMap = {
    h1: 'text-5xl font-bold',
    h2: 'text-4xl font-bold',
    h3: 'text-3xl',
    h4: 'text-2xl',
    h5: 'text-xl',
    h6: 'text-lg',
} %}

{% tag element with {
    class: classMap[data.level],
}|merge(data.attributes) %}
    {{ data.heading }}
{% endtag %}
