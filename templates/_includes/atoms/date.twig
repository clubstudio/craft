{% set data = {
    date: 'now',
    relative: true,
    format: 'j F Y',
}|merge(_context) %}

<time datetime="{{ data.date|date('Y-m-d') }}">
    {%- if data.relative -%}
        {%- set difference = data.date.diff('now')|duration -%}
        {{ difference|split(',')|first }} {{ 'ago'|t }}
    {%- else -%}
        {{ data.date|date(data.format) }}
    {%- endif -%}
</time>
