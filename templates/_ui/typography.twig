{% set data = {
    heading: '',
    classes: [],
}|merge(_context) %}

{% set code %}
    {%- block markup '' -%}
{% endset %}

<div>
    <div x-data="{ showCode: false }" class="cursor-default relative group rounded-lg border border-transparent hover:border-gray-200 hover:-m-3 hover:p-3 hover:bg-white">
        <div class="text-sm text-gray-600 mb-2">{{ data.heading }}</div>
        <button @click.prevent="showCode = !showCode" class="hidden items-center absolute right-3 top-3 py-1 px-2 rounded-md border text-xs group-hover:flex">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
                <path fill-rule="evenodd" d="M6.28 5.22a.75.75 0 010 1.06L2.56 10l3.72 3.72a.75.75 0 01-1.06 1.06L.97 10.53a.75.75 0 010-1.06l4.25-4.25a.75.75 0 011.06 0zm7.44 0a.75.75 0 011.06 0l4.25 4.25a.75.75 0 010 1.06l-4.25 4.25a.75.75 0 01-1.06-1.06L17.44 10l-3.72-3.72a.75.75 0 010-1.06zM11.377 2.011a.75.75 0 01.612.867l-2.5 14.5a.75.75 0 01-1.478-.255l2.5-14.5a.75.75 0 01.866-.612z" clip-rule="evenodd" />
            </svg>
            <span class="ml-1">Twig</span>
        </button>
        <div class="relative">
            <div class="{{ data.classes|join(' ') }}">
                {{- template_from_string(code).display -}}
            </div>
        </div>
        <div x-show="showCode" class="mt-3 rounded-md px-5 py-4 bg-gray-50">
            <pre class="text-xs m-0 text-gray-600 overflow-scroll"><code>{{ code|escape }}</code></pre>
        </div>
    </div>
</div>
