{% extends '_layouts/master' %}

{% block content %}
    <div class="mx-auto px-6 max-w-4xl">
        <h1 class="text-5xl font-medium">UI Kit</h1>

        <div class="my-12 space-y-12">
            <div>
                <h2 class="text-2xl mb-3">Colour</h2>
                <div class="grid grid-cols-4 gap-8">
                    {% for swatch in [
                        {
                            name: 'White',
                            class: 'bg-white',
                            hex: '#FFFFFF',
                            rgb: '255, 255, 255',
                        },
                        {
                            name: 'Black',
                            class: 'bg-black',
                            hex: '#000000',
                            rgb: '0, 0, 0',
                        },
                    ] %}
                        {% include '_ui/swatch' with swatch only %}
                    {% endfor %}
                </div>
            </div>
            <div>
                <h2 class="text-2xl mb-3">Typography</h2>
                <div class="space-y-6">
                    {% for component in [
                        'heading-1',
                        'heading-2',
                        'heading-3',
                        'heading-4',
                        'heading-5',
                        'heading-6',
                        'paragraph',
                        'paragraph-sm',
                        'kicker',
                    ] %}
                        {% include '_ui/typography/' ~ component %}
                    {% endfor %}
                </div>
            </div>
            <div>
                <h2 class="text-2xl mb-3">Global Components</h2>
                <div class="space-y-3">
                    {% for component in [
                        'error',
                    ] %}
                        {% include '_ui/components/' ~ component %}
                    {% endfor %}
                </div>
            </div>
            <div>
                <h2 class="text-2xl mb-3">Forms</h2>
                <div class="space-y-3">
                    {% for component in [
                        'input',
                    ] %}
                        {% include '_ui/components/' ~ component %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
